{
  "name": "nodetime",
  "version": "1.0.0",
  "description": "Starport's Swiss knife",
  "scripts": {
    "prebuild": "rm -rf dist && tsc",
    "build": "pkg --public-packages \"*\" --public --no-bytecode -c package.json -o nodetime nodetime"
  },
  "dependencies": {
    "@confio/relayer": "0.12.0",
    "@cosmjs/crypto": "^0.32.3",
    "@cosmjs/encoding": "^0.32.3",
    "@cosmjs/proto-signing": "^0.32.3",
    "@cosmjs/stargate": "^0.32.3",
    "@cosmjs/tendermint-rpc": "^0.32.3",
    "cosmjs-types": "^0.9.0",
    "js-yaml": "^4.1.0",
    "json-rpc-2.0": "^1.7.0",
    "long": "^5.2.3",
    "pkg": "^5.8.1",
    "protobufjs": "^7.2.6",
    "sinon": "^17.0.1",
    "swagger-combine": "^1.4.0",
    "swagger-typescript-api": "^13.0.3",
    "ts-proto": "^1.170.0"
  },
  "bin": "nodetime",
  "pkg": {
    "targets": [
      "node16-linux-x64",
      "node16-linux-arm64",
      "node16-macos-x64",
      "node16-macos-arm64"
    ],
    "assets": [
      "./node_modules/typescript/lib/**/*.ts",
      "./node_modules/protobufjs/**/*",
      "./node_modules/long/**/*",
      "./node_modules/@types/**/*",
      "./node_modules/@cosmjs/**/*"
    ]
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "typescript": "5.4.3"
  }
}
